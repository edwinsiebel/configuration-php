{
  "name": "spacetab-io/configuration-php",
  "description": "A configuration module for PHP microservices.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Roquie",
      "email": "roquie0@gmail.com"
    },
    {
      "name": "Shatilo Reymond",
      "email": "shatilo.reymond@gmail.com"
    }
  ],
  "bin": ["bin/st-conf"],
  "autoload": {
    "psr-4": {
      "Spacetab\\Configuration\\": "src"
    }
  },
  "require": {
    "symfony/yaml": "^4.2 || ^5.0",
    "psr/log": "^1.0",
    "symfony/console": "^4.3 || ^5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9",
    "symfony/var-dumper": "^4.2 || ^5.0",
    "humbug/box": "^3.8",
    "spacetab-io/logger-php": "^1.0"
  },
  "suggest": {
    "ext-yaml": "For fast yaml parsing."
  }
}
